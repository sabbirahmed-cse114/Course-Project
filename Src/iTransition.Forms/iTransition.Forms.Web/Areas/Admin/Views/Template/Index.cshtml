@using iTransition.Forms.Web.Areas.Admin.Models.TemplateModels
@model TemplateListModel

@{
    ViewData["Title"] = "Template Gallery";
}

<div class="container py-4">
    <section id="topTemplatesSection">
        <div class="d-flex justify-content-start align-items-start">
            <h2 class="mb-0">Start a new form</h2>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <div class="d-flex justify-content-end align-items-end mb-2">
            <a asp-area="Admin" asp-controller="App" asp-action="Index" class="btn btn-outline-info">Back</a>&nbsp;&nbsp;
            <a asp-area="Admin" asp-controller="Template" asp-action="Create" class="btn btn-outline-info">New Template</a>
        </div>

        <div class="row g-4">
            @foreach (var t in Model.TopTemplates)
            {
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <form method="get" asp-area="Admin" asp-controller="Form" asp-action="CreateFromTemplate">
                        <input type="hidden" name="templateId" value="@t.Id" />
                        <button type="submit" class="p-0 border-0 bg-transparent text-start w-100">
                            <div class="card h-100 shadow-sm border-0 hover-shadow transition template-card">
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(t.ImageUrl))
                                    {
                                        <img src="@t.ImageUrl" alt="Template Image" class="img-fluid rounded w-100" style="height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center align-items-center" style="height: 60px;"></div>
                                    }
                                </div>

                                <div class="card-footer bg-transparent border-0 d-flex justify-content-end mb-0">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </div>
                            </div>
                        </button>
                    </form>
                    <h5 class="card-title fw-bold mt-1">@t.Name</h5>
                </div>
            }
        </div>
    </section>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .template-card:hover {
            transform: scale(1.02);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: #fff9db;
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }
    </style>
}