@using iTransition.Forms.Web.Areas.Admin.Models.TemplateModels
@model TemplateListModel

@{
    ViewData["Title"] = "Template Gallery";
}

<div class="container py-4">
    <section id="topTemplatesSection">
        <div class="d-flex justify-content-start align-items-start">
            <h2 class="mb-0">Start a new form</h2>
        </div>
        <div class="d-flex justify-content-end align-items-end mb-2">
            <a asp-area="Admin" asp-controller="App" asp-action="Index" class="btn btn-outline-info">Back</a>&nbsp;&nbsp;
            <a asp-area="Admin" asp-controller="Template" asp-action="Create" class="btn btn-outline-info">New Template</a>
        </div>

        <div class="row g-4">
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <a asp-area="Admin" asp-controller="Form" asp-action="Create"
                   class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 hover-shadow transition template-card">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <i class="bi bi-plus-circle display-4 mb-3 fw-bolder text-info"></i>                            
                        </div>
                    </div>
                    <h5 class="card-title fw-bold mt-1">Blank Form</h5>
                </a>
            </div>
            @foreach (var t in Model.TopTemplates)
            {
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <a href="@Url.Action("CreateFromTemplate", "Form", new { area = "Admin", templateId = t.Id })"
                       class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm border-0 hover-shadow transition template-card">
                            <div class="card-body">                                
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex justify-content-end mt-lg-5">
                                <a>
                                    <i class="bi bi-three-dots-vertical"></i>
                                </a>
                            </div>
                        </div>
                    </a>
                    <h5 class="card-title fw-bold mt-1">@t.Name</h5>
                </div>
            }
        </div>
    </section>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .template-card:hover {
            transform: scale(1.02);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: #fff9db;
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }
    </style>
}